{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@hooks/*": [
        "src/components/hooks/*"
      ],
      "@core/*": [
        "src/components/core/*"
      ],
      "@custom/*": [
        "src/components/custom/*"
      ],
      "@utils/*": [
        "src/components/utils/*"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
